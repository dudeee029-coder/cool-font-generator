  <script>
    const fontStyles = [
      t => t,
      t => "ð—žð—®ð—¿ð—®ð—»".replace(/Karan/i, t),
      t => t.split('').map(c => c + "Ì¶").join(''),
      t => "ð•‚ð•’ð•£ð•’ð•Ÿ".replace(/Karan/i, t),
      t => t.split('').map(c => c + "Ì·").join(''),
      t => t.toUpperCase(),
      t => "áµáµƒÊ³áµƒâ¿".replace(/karan/i, t),
      t => "ï¼«ï½ï½’ï½ï½Ž".replace(/Karan/i, t),
      t => "ð’¦ð’¶ð“‡ð’¶ð“ƒ".replace(/Karan/i, t),
      t => "ð“šð“ªð“»ð“ªð“·".replace(/Karan/i, t)
    ];

    function generateFonts() {
      const input = document.getElementById("textInput").value || "karan";
      const container = document.getElementById("fonts");
      container.innerHTML = "";

      fontStyles.forEach(style => {
        const text = style(input);
        const box = document.createElement("div");
        box.className = "font-box";
        box.innerHTML = `
          <div class="font-text">${text}</div>
          <button onclick="copyText('${text}')">Copy</button>
        `;
        container.appendChild(box);
      });
    }

    function copyText(text) {
      navigator.clipboard.writeText(text);
      alert("Copied!");
    }

    generateFonts();
  </script>

